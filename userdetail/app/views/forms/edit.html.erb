	<%= f.label :lastname %><br>
	<%= f.text_area :lastname %>
    </p>
    <p>
	<%= f.label :email %><br>
	<%= f.text_area :email %>
    </p>
   <!--  <p>
	<%= f.label :password %><br>
	<%= f.text_area :password %>
